{
    "files.autoSave": "afterDelay",
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    "workbench.statusBar.visible": true,
    "editor.minimap.enabled": true,
    "workbench.startupEditor": "newUntitledFile",
    "[python]": {
      "editor.rulers": [
        80
      ]
    },
    "[javascript]": {
      "editor.tabSize": 2,
      "editor.rulers": [
        100
      ]
    },
    "[javascriptreact]": {
        "editor.tabSize": 2,
        "editor.rulers": [
          100
        ]
    },
    "[json]": {
      "editor.rulers": [
        100
      ],
      "editor.tabSize": 2
    }
}
